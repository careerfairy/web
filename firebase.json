{
   "functions": {
      "source": "packages/functions",
      "predeploy": ["npm run lint:functions", "npm run build:functions"],
      "ignore": [
         "**/node_modules/**",
         "**/firebase-export-*",
         "**/emulatorData/**"
      ]
   },
   "firestore": {
      "rules": "firestore.rules"
   },
   "emulators": {
      "functions": {
         "port": 5001
      },
      "firestore": {
         "port": 8080
      },
      "hosting": {
         "port": 5000
      },
      "ui": {
         "enabled": true
      },
      "auth": {
         "port": 9099
      }
   }
}
