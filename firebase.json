{
   "functions": {
      "source": "packages/functions",
      "predeploy": ["npm run lint:functions", "npm run build:functions"],
      "ignore": [
         "**/node_modules/**",
         "**/firebase-export-*",
         "**/emulatorData/**"
      ]
   },
   "firestore": {
      "rules": "firestore.rules"
   },
   "hosting": {
      "rewrites": [
         {
            "source": "/bundle-allFutureLivestreams",
            "function": "bundle-allFutureLivestreams"
         },
         {
            "source": "/bundle-pastYearLivestreams",
            "function": "bundle-pastYearLivestreams"
         },
         {
            "source": "/bundle-futureLivestreamsNext15Days",
            "function": "bundle-futureLivestreamsNext15Days"
         },
         {
            "source": "/bundle-allSparksStats",
            "function": "bundle-allSparksStats"
         }
      ]
   },
   "emulators": {
      "functions": {
         "port": 5001,
         "host": "0.0.0.0"
      },
      "firestore": {
         "port": 8080,
         "host": "0.0.0.0"
      },
      "hosting": {
         "port": 5000,
         "host": "0.0.0.0"
      },
      "ui": {
         "enabled": true
      },
      "auth": {
         "port": 9099,
         "host": "0.0.0.0"
      },
      "storage": {
         "port": 9199,
         "host": "0.0.0.0"
      }
   },
   "storage": {
      "rules": "storage.rules"
   }
}
