# Shamefully hoist for React Native/Expo compatibility
# This is required for Metro bundler to resolve transitive dependencies
# like expo-asset, react-native-reanimated, etc.
shamefully-hoist=true

# Allow workspace packages to be linked
link-workspace-packages=true

# Strict peer dependencies disabled for Expo/React Native compatibility
strict-peer-dependencies=false

# Hoist pdfjs-dist for react-pdf v7 compatibility
# Required by react-pdf to ensure the PDF.js worker can be found correctly
# See: https://github.com/wojtekmaj/react-pdf
public-hoist-pattern[]=pdfjs-dist
