{
  "name": "nextjs-with-firebase-hosting",
  "license": "MIT",
  "version": "1.0.0",
  "description": "Host Next.js SSR app on Firebase Cloud Functions with Firebase Hosting redirects.",
  "repository": "https://github.com/jthegedus/firebase-functions-next-example.git",
  "main": "dist/functions/index.js",
  "scripts": {
    "setup": "npm run firebase use --add",
    "build:app": "next build src/app",
    "build:functions": "babel src/functions --out-dir dist/functions --source-maps && npm run copy-routes && npm run copy-emails && npm run copy-keys",
    "build": "npm run rm-prior-build && npm install && npm run build:app && npm run build:functions",
    "watch:app": "next src/app",
    "watch:functions": "babel src/functions --out-dir dist/functions --source-maps --watch",
    "watch": "npm run watch:app & npm run watch:functions",
    "serve": "firebase serve --only functions,hosting",
    "copy-routes": "cpx \"src/routes.js\" \"dist/functions\" -C",
    "copy-emails": "cpx \"src/functions/html_emails/*\" \"dist/functions/html_emails\" -C",
    "copy-keys": "cpx \"src/functions/keys/*\" \"dist/functions/keys\" -C",
    "rm-prior-build": "rm -rf dist && rm -rf node_modules && rm -rf src/app/node_modules && rm -rf src/app/.next",
    "predeploy": "rimraf dist/ && npm run build",
    "deploy": "npm run firebase deploy --only functions,hosting"
  },
  "dependencies": {
    "@fullpage/react-fullpage": "^0.1.17",
    "@material-ui/core": "^4.11.0",
    "@material-ui/icons": "^4.9.1",
    "@material-ui/lab": "^4.0.0-alpha.56",
    "@sentry/browser": "^5.13.2",
    "axios": "^0.19.0",
    "express": "^4.17.1",
    "firebase": "^7.7.0",
    "firebase-admin": "^8.9.2",
    "firebase-functions": "^3.3.0",
    "firestore-parser": "^0.9.0",
    "formik": "^2.1.2",
    "global": "^4.4.0",
    "hoist-non-react-statics": "^3.3.2",
    "html-loader": "^0.5.5",
    "luxon": "^1.22.0",
    "mailgun-js": "^0.22.0",
    "next": "^9.2.0",
    "next-routes": "^1.4.2",
    "postmark": "^2.3.5",
    "react": "^16.12.0",
    "react-countdown": "^2.2.0",
    "react-dom": "^16.12.0",
    "react-file-picker": "0.0.6",
    "react-linkify": "^1.0.0-alpha",
    "react-mic": "^12.4.1",
    "react-pdf": "^4.1.0",
    "react-player": "^1.14.2",
    "react-scroll": "^1.7.16",
    "react-sizeme": "^2.6.12",
    "react-stack-grid": "^0.7.1",
    "react-swipeable-views": "^0.13.9",
    "redux": "^4.0.5",
    "semantic-ui-react": "^0.88.2",
    "twilio": "^3.35.0",
    "url": "^0.11.0",
    "uuid": "^8.3.0"
  },
  "engines": {
    "node": "10"
  },
  "devDependencies": {
    "@babel/cli": "^7.5.5",
    "@babel/core": "^7.5.5",
    "@babel/preset-env": "^7.5.5",
    "cross-env": "^5.2.0",
    "firebase-functions-test": "^0.1.6",
    "firebase-tools": "^7.2.1",
    "cpx": "^1.5.0"
  }
}
