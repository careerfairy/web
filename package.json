{
   "name": "careerfairy-monorepo",
   "version": "0.0.0",
   "private": true,
   "workspaces": [
      "apps/*",
      "packages/*"
   ],
   "scripts": {
      "build": "turbo run build",
      "build:packages": "turbo run build --ignore=\"apps/**/*\" --no-deps",
      "dev": "turbo run dev --parallel",
      "test": "turbo run test",
      "clean": "turbo run clean",
      "start": "turbo run start --parallel",
      "test:e2e-webapp": "cross-env NODE_ENV=test turbo run test:e2e-webapp --scope=@careerfairy/webapp --scope=@careerfairy/functions --include-dependencies --no-deps",
      "test:e2e-webapp-debug": "cross-env NODE_ENV=test turbo run test:e2e-webapp-debug --scope=@careerfairy/webapp --include-dependencies --no-deps",
      "webapp:report": "npm run playwright:report -w @careerfairy/webapp",
      "lint": "turbo run lint --parallel",
      "format": "prettier --write --ignore-unknown .",
      "prepare": "husky install",
      "build:functions": "turbo run build --scope=@careerfairy/functions --include-dependencies",
      "lint:functions": "turbo run lint --scope=@careerfairy/functions",
      "build:webapp": "turbo run build --scope=@careerfairy/webapp --include-dependencies --no-deps",
      "deploy:rules": "firebase deploy --only firestore:rules",
      "prepare:manual": "if [[ $NODE_ENVIRONMENT != \"production\" ]]; then husky install; fi",
      "start:webapp": "npx firebase emulators:exec \"npm run start -w @careerfairy/webapp\" --ui --only auth,firestore,functions"
   },
   "devDependencies": {
      "@rxdi/firelink": "^0.9.1",
      "cross-env": "^7.0.3",
      "firebase-tools": "^11.18.0",
      "husky": "^7.0.4",
      "lint-staged": "^12.4.1",
      "prettier": "^2.6.2",
      "turbo": "^1.6.3",
      "vercel": "^24.2.0"
   },
   "lint-staged": {
      "**/*": "prettier --write --ignore-unknown"
   },
   "packageManager": "npm@8.5.5",
   "engines": {
      "npm": ">=7"
   }
}
