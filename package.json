{
  "name": "nextjs-with-firebase-hosting",
  "license": "MIT",
  "version": "1.0.0",
  "description": "Host Next.js SSR app on Firebase Cloud Functions with Firebase Hosting redirects.",
  "repository": "https://github.com/jthegedus/firebase-functions-next-example.git",
  "main": "dist/functions/index.js",
  "scripts": {
    "full-install": "npm install && cd ./src/app && npm install",
    "setup": "npm run firebase use --add",
    "deploy:next3": "npm run firebase deploy --only functions:next3",
    "build:app": "next build src/app --debug",
    "build:functions": "babel src/functions --out-dir dist/functions --source-maps && npm run copy-files",
    "build": "npm run rm-prior-build && npm install && npm run build:app && npm run build:functions",
    "watch:app": "next src/app",
    "watch:functions": "babel src/functions --out-dir dist/functions --source-maps --watch",
    "watch": "npm run watch:app & npm run watch:functions",
    "serve": "firebase serve --only functions,hosting",
    "copy-files": "cpx \"src/functions/**\" \"dist/functions\" -C",
    "rm-prior-build": "rm -rf dist && rm -rf node_modules && rm -rf src/app/node_modules && rm -rf src/app/.next",
    "predeploy": "rimraf dist/ && npm run build",
    "deploy": "npm run firebase deploy --only functions,hosting",
    "start:functions:withProdDb": "firebase emulators:exec --only functions \"cd ./src/app && npm run dev:windows\"",
    "start:functions:withLocalDb": "firebase emulators:exec --only functions,firestore \"cd ./src/app && npm run dev:windows\"",
    "prepare": "husky install"
  },
  "dependencies": {
    "agora-access-token": "^2.0.4",
    "algoliasearch": "^4.8.3",
    "axios": "^0.19.0",
    "babel-plugin-transform-imports": "^2.0.0",
    "dotenv": "^8.2.0",
    "firebase-admin": "^8.9.2",
    "firebase-functions": "^3.13.2",
    "lodash": "^4.17.20",
    "lodash.clonedeep": "^4.5.0",
    "lodash.debounce": "^4.0.8",
    "luxon": "^1.22.0",
    "mailgun-js": "^0.22.0",
    "next": "^12.0.8",
    "postmark": "^2.3.5",
    "ical-generator": "^2.2.0"
  },
  "engines": {
    "node": "16"
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  },
  "devDependencies": {
    "@babel/cli": "^7.5.5",
    "@babel/core": "^7.5.5",
    "@babel/plugin-proposal-throw-expressions": "^7.12.13",
    "@babel/preset-env": "^7.5.5",
    "@svgr/webpack": "^5.5.0",
    "babel-plugin-lodash": "^3.3.4",
    "cors": "^2.8.5",
    "cpx": "^1.5.0",
    "cross-env": "^5.2.0",
    "firebase-functions-test": "^0.1.6",
    "firebase-tools": "^7.16.2",
    "husky": "^7.0.4",
    "lint-staged": "^12.3.4",
    "prettier": "2.1.1",
    "webpack": "^5.32.0"
  }
}
