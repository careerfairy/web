{
   "compilerOptions": {
      "baseUrl": ".",
      "noImplicitReturns": true,
      "noUnusedLocals": true,
      "outDir": "dist",
      "sourceMap": true,
      "module": "commonjs",
      "strict": false,
      "target": "ES2021",
      "lib": ["ES2021", "dom"],
      "allowJs": false,
      "declaration": true,
      "resolveJsonModule": true,
      "skipLibCheck": true,
      "esModuleInterop": true,
      "paths": {
         "@careerfairy/shared-lib/*": ["../shared-lib/src/*"]
      }
   },
   "compileOnSave": true,
   "include": ["src"]
}
