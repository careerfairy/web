{
   "compilerOptions": {
      "noImplicitReturns": true,
      "noUnusedLocals": true,
      "outDir": "dist",
      "sourceMap": true,
      "module": "commonjs",
      "strict": false,
      "target": "ES2021",
      "lib": ["ES2021"],
      "allowJs": false,
      "declaration": true,
      "resolveJsonModule": true,
      "skipLibCheck": true
   },
   "compileOnSave": true,
   "include": ["src"]
}
